@{
    Layout = null;
}

<!--按钮栏-->
<div class="toolbar row">
     <div class="col-md-5 col-md-offset-5">
        <!-- 上传附件，我用的自带的控件，你自己改 -->
        <!-- <a href="#" class="a-txt" ng-click="prepare_create_note()">清空</a> -->
        
        <a href="#" class="a-txt" ng-click="return_to_view()" ><span class="glyphicon glyphicon-off"></span>&nbsp;返回</a>
        <a href="#" class="a-txt" ng-disabled="notefrm.$invalid" ng-click="post_create_note(current, notefrm)">保存笔记</a>
        <a href="#" class="a-txt" ng-click="mark_love_it()" >
			<span ng-if="current.LoveOrNot" class="glyphicon glyphicon-heart-empty"></span>
        	<span ng-if="!current.LoveOrNot" class="glyphicon glyphicon-heart-empty" style="color:#ccc;"></span> &nbsp;爱心笔记
        </a>
        <a href="#" class="a-txt" ng-click="mark_share_it()">
            <span ng-if="current.ShareOrNot" class="glyphicon glyphicon-share-alt"></span>
            <span ng-if="!current.ShareOrNot" class="glyphicon glyphicon-share-alt" style="color:#ccc;"></span> &nbsp;分享笔记
        </a>
     </div>
	<!-- <div style="text-align:left;font-size:15px;margin-top:16px;font-weight:bold"></div> -->
</div>

<form class="form-horizontal" name="notefrm" style="margin-top:80px;">
    <div class="form-group">
        <label class="col-sm-2 control-label">标题：</label>
        <div class="col-sm-8">
        	<input type="text" name="title" class="form-control" placeholder="标题是什么？" 
            	ng-model="current.Title" ng-required="'true'" ng-minlength="5" />
            <p class="help-block" ng-class="{'error': notefrm.title.$invalid}">标题不能为空</p>
        </div>
    </div>

    <div class="form-group" style="margin-top:30px;">
        <label class="col-sm-2 control-label">正文：</label>
        <div class="col-sm-8">
            <textarea class="form-control" name="content" rows="20" placeholder="在此输入正文..." 
            	ng-model="current.Content" ng-required="'true'" ng-required ng-minlength="5"></textarea>
			<!-- <p class="help-block" ng-class="{'error': notefrm.title.$invalid}">正文不能空白</p> -->
        </div>
    </div>
</form>

