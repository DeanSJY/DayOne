@{ViewBag.Title = "笔记本";}

<link rel="stylesheet" href="~/Content/notebook.css" />
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/angular.js"></script>
<script>


    function newNotebook() {
        var name = $("#inputBookname").val();
        $.get(
            "addNotebook",
            { name: name },
            function (data) {
                if (data = "true") {
                    var str = $("#notebookn").html();
                    str += "<div class=\"note\"><div class=\"note-left\"><\/div><div class=\"note-body\"><h4>";
                    str += name;
                    str += "<\/h4><\/div><\/div>";
                    $("#notebookn").html(str);
                }
            }
            )
    }

    $(function () {
        $('#myModal').modal()
    })


</script>

<div id="up">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <form class="navbar-form navbar-right">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="笔记搜索">
                    </div>
                    <button type="submit" class="btn btn-default">GO!</button>
                </form>
                <ul class="nav nav-pills">
                    <li role="presentation" class="active" data-toggle="modal" data-target="#myModal">添加笔记本</li>
                    <li role="presentation"><a href="#">爱心笔记</a></li>
                    <li role="presentation"><a href="#">附件笔记</a></li>
                    <li role="presentation"><a href="#">笔记回收站</a></li>
                </ul>  
            </div>

            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title" id="myModalLabel">添加笔记本</h4>
                        </div>
                        <input id="inputBookname" type="text" name="bookname" placeholder="请输入笔记本名称" />
                        <div class="modal-footer">
                            <button type="button" data-dismiss="modal">取消</button>
                            <button onclick="newNotebook()">创建</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </nav>
</div>
<div id="notebook">
    <div ng-show="nav==1" id="notebookn">
        <div class="note">
            <div class="note-left"></div>
            <div class="note-body">
                <h4>生活</h4>
            </div>

        </div>
        <div class="note">
            <div class="note-left"></div>
            <div class="note-body">
                <h4>学习</h4>
            </div>
        </div>
        <div class="note">
            <div class="note-left"></div>
            <div class="note-body">
                <h4>工作</h4>
            </div>
        </div>
        <div class="note">
            <div class="note-left"></div>
            <div class="note-body">
                <h4>爱情</h4>
            </div>
        </div>
    </div>


</div>
