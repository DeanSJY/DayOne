@{
    Layout = null;
}

<div class="toolbar panel panel-default" ng-controller="AddPlanController">
	<div class="panel-footer" ng-show="!show_creating()">
		<button href="#" ng-click="prepare_adding()"><span class="glyphicon glyphicon-plus"></span>&nbsp;添加任务</button>
	</div>
	<div class="panel-body" ng-show="show_creating()"
		ng-mouseleave="_out_of_editing=true" ng-mouseenter="_out_of_editing=false">
		<textarea class="form-control" placeholder="任务内容" ></textarea>
		<div class="input-group" style="margin-top:5px;">
			<span class="input-group-addon">完成时间</span>
			<input type="text" class="form-control" aria-label="" placeholder="2017/01/01 20:04" ng-blur="cancel_adding()">
			<span class="input-group-btn">
				<button class="btn btn-primary" type="button">创建任务</button>
				<button class="btn btn-default" type="button" ng-click="cancel_adding(true)">取消</button>
			</span>
		</div>
	</div>
</div>

